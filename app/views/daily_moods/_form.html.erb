<%= form_for @daily_mood_vm, url: create_daily_moods_path do |f| %>

  <div class="row-fluid well">
    <div class="span6">

      <% @moods.each do |mood| %>
        <div class="control-group">
          <%= hidden_field_tag mood.name, mood.id, name: "daily_mood_view_model[daily_moods][][mood_id]"%>
          <%= label_tag mood.name, nil, class: 'control-label' %>
          <%= text_field_tag mood.name, nil, name: "daily_mood_view_model[daily_moods][][count]"%>
        </div>
      <% end %>

     <div class="control-group">
        <%= f.label :date, class: 'control-label'  %>
        <%= f.date_field :date %>
     </div>

      <%=f.submit(:class=>'btn btn-primary')%>

    </div>
  <div/>
<% end %>
