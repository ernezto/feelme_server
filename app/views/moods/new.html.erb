      <%= label_tag(:date, "Date:") %>
      <%= date_field_tag(:date) %>
    </div>
    <%= submit_tag("Submit", :class=>'btn btn-primary') %>
  </div>
  <div class="span6">
  </div>
<div/>
<% end %>
